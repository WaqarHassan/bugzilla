#main-container.container
  %h1 Listing projects
  = link_to "Sign Out", destroy_user_session_path, :method => :delete
  %table.table.table-hover.table-striped.table-bordered.table-responsive
    %thead
      %tr
        %th Id
        %th Name
        %th Total Bugs
        %th Creater 
        

    %tbody
      - @projects.each do |project|
        %tr
          %td= project.id
          %td= link_to project.name , project_bugs_path(project)
          / %td= link_to 'Edit Project', edit_project_path(project)
          / %td= link_to 'Delete Project', project, :method => :delete, :data => { :confirm => 'Are you sure?' }
          %td= project.bugs.count
          %td= project.users.first.name

  %br
  .tooltip-wrapper{:title => "Only Manager can Add Project"}
    - if current_user.user_type == "Manager"
      = link_to 'New Project', new_project_path , class: "btn btn-success"
    - else
      = link_to 'New Project', new_project_path, class: "btn btn-default disabled"

= javascript_include_tag "common"
- content_for :javascript do
  :javascript
    $('.table.table-hover.table-striped.table-bordered.table-responsive').dataTable()

