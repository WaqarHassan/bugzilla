= form_for @bug do |f|
  - if @bug.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bug.errors.count, "error")} prohibited this bug from being saved:"
      %ul
        - @bug.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :bug_type
    = f.text_field :bug_type
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :deadline
    = f.datetime_select :deadline
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
