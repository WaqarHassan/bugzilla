= form_for [@bug.project, @bug] do |f|
  -if @bug.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bug.errors.count, "error")} prohibited this bug from being saved:"
      %ul
        - @bug.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :user_id , :value => @user_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :bug_type
    = f.collection_select :bug_type, Bug.bug_types, :first, :first
  .field#type_feature
    = f.label :status
    = f.select :status, options_for_select(["New","Started","Completed"])
  .field#type_bug.hide_select
    = f.label :status
    = f.select :status, options_for_select(["New","Started","Resolved"])
  .field
    = f.label :deadline
    = f.date_select :deadline
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'

